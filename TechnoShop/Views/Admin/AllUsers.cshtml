@model CombinedAllUsersViewModel

@if (Model.Responce != null)
{
    @await Html.PartialAsync("_ToastErrorSucessInformation", Model.Responce)
}

@if (Model.TechnoShopUsers != null)
{
    <div>
        <div class="table-responsive" style="margin-left: 24px;margin-right: 24px;background: #ffffff;">
            <table class="table table-striped table-hover table-dark">
                <thead>
                    <tr class="text-center">
                        <th style="border-top-left-radius: 20px;">Email</th>
                        <th>Id</th>
                        <th>Роли (???)</th>
                        <th style="border-top-right-radius: 20px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.TechnoShopUsers)
                    {
                        <tr>

                            <td class="text-center" style="color: #ffffff;font-size: 16px;">
                                @user.Email
                            </td>

                            <td class="text-center justify-content-center" style="text-align: center;font-size: 16px;color: #ffffff;">
                                @user.Id
                            </td>

                            <td class="text-center justify-content-center" style="text-align: center;font-size: 16px;color: #ffffff;">

                                @foreach (var role in user.Roles)
                                {
                                    <p class="d-flex justify-content-center align-items-center justify-content-md-end" style="margin-bottom: 3px;text-align: center;">

                                        @role

                                        <a class="btn btn-primary btn-sm d-flex justify-content-center align-items-center align-items-md-center" role="button" href="/Cart/MyCart" style="margin: 5px;font-size: 17px;font-weight: bold;background: #e21205;border-width: 0px;border-radius: 12px;box-shadow: 2px 2px 3px rgba(0,0,0,0.4);width: 33px;height: 33px;">
                                            <svg class="bi bi-x-lg" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16">
                                                <path fill-rule="evenodd" d="M13.854 2.146a.5.5 0 0 1 0 .708l-11 11a.5.5 0 0 1-.708-.708l11-11a.5.5 0 0 1 .708 0Z"></path>
                                                <path fill-rule="evenodd" d="M2.146 2.146a.5.5 0 0 0 0 .708l11 11a.5.5 0 0 0 .708-.708l-11-11a.5.5 0 0 0-.708 0Z"></path>
                                            </svg>
                                        </a>
                                    </p>
                                }

                                <p class="d-flex justify-content-center align-items-center justify-content-md-end" style="margin-bottom: 3px;text-align: center;">

                                    Add role

                                    <a class="btn btn-primary btn-sm d-flex justify-content-center align-items-center align-items-md-center" role="button" href="/Cart/MyCart" style="margin: 5px;font-size: 17px;font-weight: bold;background: #17e205;border-width: 0px;border-radius: 12px;box-shadow: 2px 2px 3px rgba(0,0,0,0.4);width: 33px;height: 33px;">
                                        <svg class="bi bi-plus-lg" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" style="color: rgb(0,0,0);">
                                            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"></path>
                                        </svg>
                                    </a>
                                </p>

                            </td>
                            <td class="text-center" style="text-align: center;font-size: 16px;color: #ffffff;"><a class="btn btn-primary btn-sm" role="button" href="/Cart/MyCart" style="margin: 5px;font-size: 17px;font-weight: bold;background: #e21205;border-width: 0px;border-radius: 12px;box-shadow: 2px 2px 3px rgba(0,0,0,0.4);">Delete user</a></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td style="border-bottom-left-radius: 20px;border-bottom-width: 0px;text-align: center;"><a class="btn btn-primary btn-sm" role="button" href="/Cart/MyCart" style="margin: 5px;font-size: 17px;font-weight: bold;background: #e28c05;border-width: 0px;border-radius: 12px;box-shadow: 2px 2px 3px rgba(0,0,0,0.4);">Add new role</a></td>
                        <td style="text-align: center;font-size: 20px;color: var(--bs-table-color);font-weight: bold;border-bottom-width: 0px;"></td>
                        <td style="text-align: center;font-size: 20px;color: var(--bs-table-color);font-weight: bold;border-bottom-width: 0px;"></td>
                        <td style="text-align: center;font-size: 20px;color: var(--bs-table-color);font-weight: bold;border-bottom-right-radius: 20px;border-bottom-width: 0px;"></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}