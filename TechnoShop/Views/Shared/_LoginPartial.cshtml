@using Microsoft.AspNetCore.Identity
@inject SignInManager<TechnoShopUser> SignInManager
@inject UserManager<TechnoShopUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div style="margin-top: 0px;margin-right: 0px;margin-left: 20px;">
        <a class="btn btn-primary" role="button" href="/product/addproduct" style="margin: 5px;font-size: 17px;font-weight: bold;background: #e28c05;border-width: 0px;border-radius: 12px;">
            My cart
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-basket3-fill" style="margin-bottom: 5px;">
                <path d="M5.757 1.071a.5.5 0 0 1 .172.686L3.383 6h9.234L10.07 1.757a.5.5 0 1 1 .858-.514L13.783 6H15.5a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H.5a.5.5 0 0 1-.5-.5v-1A.5.5 0 0 1 .5 6h1.717L5.07 1.243a.5.5 0 0 1 .686-.172zM2.468 15.426.943 9h14.114l-1.525 6.426a.75.75 0 0 1-.729.574H3.197a.75.75 0 0 1-.73-.574z"></path>
            </svg>
        </a>

        <a class="btn btn-light me-2" role="button" href="/Identity/Account/Manage" style="margin: 5px;font-size: 17px;font-weight: bold;background: rgb(209,232,255);border-width: 0px;border-radius: 12px;">
            My profile
        </a>

        <a class="btn btn-light me-2" role="button" style="margin: 5px;font-size: 17px;font-weight: bold;background: rgb(255 180 180);border-width: 0px;border-radius: 12px;" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            Logout
        </a>
    </div>
}
else
{
    <div style="margin-top: 0px;margin-right: 0px;margin-left: 20px;">
        <a class="btn btn-light me-2" role="button" style="margin: 5px;font-size: 17px;font-weight: bold;background: rgb(209,232,255);border-width: 0px;border-radius: 12px;" asp-area="Identity" asp-page="/Account/Login">
            Login
        </a>
        <a class="btn btn-primary" role="button" style="margin: 5px;font-size: 17px;font-weight: bold;background: #0038a8;border-width: 0px;border-radius: 12px;" asp-area="Identity" asp-page="/Account/Register">
            Register
        </a>
    </div>
}

