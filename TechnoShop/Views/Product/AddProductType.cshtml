@model ProductTypeViewModel
@*Скрипты валидации данных*@
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

@*Bootstrap*@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

@{
    if (Model != null)
    {
        if (Model.ErrorListInfo.Any())
        {
            <div class="alert alert-danger col-sm-5" role="alert">
                @foreach (var Error in Model.ErrorListInfo)
                {
                    <div class="text-center">@Error</div>
                }
            </div>
        }
        if (Model.StatusListInfo.Any())
        {
            <div class="alert alert-success col-sm-5" role="alert">
                @foreach (var Status in Model.StatusListInfo)
                {
                    <div class="text-center">@Status</div>
                }
            </div>
        }

    }


    using (Html.BeginForm("AddProductType", "Product", FormMethod.Post))
    {
        <div class="mb-3">
            <label class="form-label" asp-for="TypeName">@Html.DisplayNameFor(q => q.TypeName) (в единственном числе)</label>
            <div class="col-sm-5">
                <input asp-for="TypeName" type="text" class="form-control" placeholder="Например, робот-пылесос" />
            </div>
            <span asp-validation-for="TypeName" />
        </div>

        <button class="btn btn-primary" type="submit">
            Добавить тип
        </button>
    }

    foreach (var productType in ViewData["ProductTypes"] as List<SelectListItem>)
    {
        <li>@productType.Value</li>
    }
}
